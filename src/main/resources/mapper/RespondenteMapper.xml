<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="website.marcioheleno.mvpquestmanager.mapper.RespondenteMapper">

    <select id="getRespondenteListMapper" resultType="Respondente">
        SELECT *
        FROM Respondente
    </select>

    <select id="getRespondenteIdMapper" resultType="Respondente" parameterType="int">
        SELECT *
        FROM Respondente
        WHERE cd_numero_registro = #{cd_numero_registro}
    </select>

    <insert id="addTopicInfo" parameterType="Topic">
        INSERT
        INTO topic
        (
            topic_title,
            topic_content
        )
        VALUES
        (
            #{topicTitle },
            #{topicContent }
        )
    </insert>

    <update id="setTopicInfo" parameterType="Topic">
        UPDATE	topic
        SET		topic_title = #{topicTitle }
                ,		topic_content = #{topicContent }
        WHERE	topic_no = #{topicNo }
    </update>

    <delete id="deleteTopicInfo" parameterType="int">
        DELETE
        FROM  topic
        WHERE topic_no = #{topicNo }
    </delete>

</mapper>

